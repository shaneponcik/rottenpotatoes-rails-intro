-#  This file is app/views/movies/index.html.haml
%h2 All Movies

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th#title_header{:class => @highlight_movie}= link_to "Movie Title", movies_path(:movies_order => 'asc_title')
      %th Rating
      %th#release_date_header{:class => @highlight_date}= link_to "Release Date", movies_path(:movies_order => 'asc_release')
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
